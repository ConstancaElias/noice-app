extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left Resources List 
      if list.length > 0
        .w3-container 
          table.w3-table-all
            tr 
              th Title
              th Name
              th Author
              th Ranking
              th
              th
              th
            each file in list
              tr
                td=  file.title
                td=  file.name
                td=  file.authors
                td= file.ranking
                td
                  button.w3-button.w3-circle.w3-teal(onclick="window.location.assign('/search/download/file?id=" + file.id + "&name=" + file.name +  '&type=' + file.type + "')") Download 
                td 
                  button.w3-button.w3-circle.w3-teal(onclick="window.location.assign('/post?id=" + file.id + "&name=" + file.name + "')") Post 
                td 
                  button.w3-button.w3-circle.w3-teal(onclick="window.location.assign('/file/ranking?id=" + file.id + "&name=" + file.name + "')") Evaluate
      else
        .w3-container
          p There are no resources...
        
    a(href="/search") Return
